    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Django",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver"
            ],
            "django": true
        },
        {
            "name": "Huey: consumer (DEBUG)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "run_huey",
                "-V", // maximum verbosity (maps to --huey-verbose)
                "--workers",
                "1",
                "--worker-type",
                "process"
            ],
            "env": {
                "PYTHONUNBUFFERED": "1"
            },
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}"
        }
    ],
    "compounds": [
        {
            "name": "Django + Huey",
            "configurations": [
                "Python Debugger: Django",
                "Huey: consumer (DEBUG)"
            ]
        }
    ]
}